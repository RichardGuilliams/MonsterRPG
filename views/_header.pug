header.header
    nav.nav
        a.nav__el(href='/') Home

    .header__logo
        img(src='/img/logo.png' alt='App Logo')

    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout(href='#') Log Out
            a.nav__el(href='/me') 
                img.nav__user-img(src=`/img/users/${user.photo}`, alt=`${user.name} Photo`)
                span= user.name.split(' ')[0]
        else
            a.nav__el.nav__el--cta(href="/login") Login
            a.nav__el.nav__el--cta(href='/signup') Sign Up
